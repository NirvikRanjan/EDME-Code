
@{
    ViewBag.Title = "insuranceChangeAssignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info">
    <div class="panel-heading"><strong>Change Assignment</strong> </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-3 firstHalf">
                <div class="form-group">
                    <label>Year Of Sale :</label><br />
                    <select id="ddlyearofsale" class="form-control selectpicker" multiple>
                    </select>
                </div>
            </div>
            <div class="col-md-3 firstHalf">
                <div class="form-group">
                    <label for="">Insurance Company</label><br />
                    @Html.DropDownList("icName", new SelectList(ViewBag.ddlinsurancelist, "id", "companyName"), new { @class = "form-control selectpicker", @multiple = "multiple", @id = "icName" })
                </div>
            </div>
            @if (Session["UserRole"].ToString() == "ICManager")
            {
                <div class="col-md-3 firstHalf">
                    <div class="form-group">
                        <label>Dealer : </label>
                        <br />
                        @Html.DropDownList("ddldealerCode", new SelectList(ViewBag.dealerlist, "id", "name"), new { @class = "form-control selectpicker", @data_field = "ddldealerCode", @id = "ddldealerCode" })
                    </div>
                </div>
            }
            else if (Session["UserName"].ToString() == "HO_Manager")
            {
                <div class="col-md-3 firstHalf">
                    <div class="form-group">
                        <label>Dealer : </label>
                        <br />
                        @Html.DropDownList("ddldealerCode", new SelectList(ViewBag.dealerlist, "id", "name"), new { @class = "form-control selectpicker", @data_field = "ddldealerCode", @id = "ddldealerCode", })
                    </div>
                </div>

            }

            


            <div class="col-sm-3 firstHalf">
                <div class="form-group">
                    <label>Policy Expiry From Date :</label>
                    <input type="text" class="datePicker form-control" id="txtpolicyfromdate" name="singleData" value="" readonly>
                </div>
            </div>
            <div class="col-sm-3 ">
                <div class="form-group">
                    <label>Policy Expiry To Date :</label>
                    <input type="text" class="datePicker form-control" id="txtpolicytodate" name="tranferData" value="" readonly>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="form-group">
                    <label>CRE's</label><br />
                    @Html.DropDownList("creList", new SelectList(ViewBag.creList, "id", "name"), new { @class = "form-control selectpicker", @id = "cre_list", @multiple = "multiple" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Renewal Type: </label>
                    <br />
                    @Html.DropDownList("ddlrenewalType", new SelectList(ViewBag.ddlrenewalList, "id", "name"), "--Select--", new { @class = "form-control", @id = "ddlrenewalType" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Campaign: </label>
                    <br />
                    @Html.DropDownList("ddlcampaign", new SelectList(ViewBag.campaignList, "id", "name"), new { @class = "form-control selectpicker", @id = "ddlcampaign", @multiple = "multiple" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Marketing Campaign: </label>
                    <br />
                    @Html.DropDownList("ddlmarketingcampaign", new SelectList(ViewBag.marketingcampaignList, "id", "name"), new { @class = "form-control selectpicker", @id = "ddlmarketingcampaign", @multiple = "multiple" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Priority: </label>
                    <br />
                    @Html.DropDownList("ddlpriority", new SelectList(ViewBag.priorityList, "id", "name"), new { @class = "form-control selectpicker", @id = "ddlpriority", @multiple = "multiple" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Disposition Status :<sup class="text-danger">*</sup> </label>
                    <div class="form-group">
                        <select class="form-control multiSelectClass" id="ddldispositionStatus">
                            <option value="">--Select--</option>
                            <option value="100">Transfer All Calls</option>
                            <option value="0">Not yet called</option>
                            <option value="25">Book Appointment</option>
                            <option value="26">Renewal Not Required</option>
                            <option value="4">Call me later</option>
                            <option value="6,7,8,9,43">Non Contact</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 secondHalf">
                <div class="form-group">
                    <label></label>
                    <button type="submit" class="btn btn-sm btn-primary" onclick="getchangeassigningdata();" name="selectedFile" style="margin-top:26px" value="assignCalls">Fetch</button>
                </div>
            </div>
        </div>
    </div>
</div>
