                        }
                        if (res.cameFor === "chassis") {
                            $('#txtchassisNo').val('');
                            $('#txtchassisNo').focus();
                              Lobibox.notify('error', {
						msg: 'This chassis no already exist cannot add to database'
						});
						return false;
                        }
                        if (res.cameFor === "engine") {
                            $('#txtengineNo').val('');
                                //$('#txtengineNo').focus();
                              Lobibox.notify('error', {
						msg: 'This Engine no already exist cannot add to database'
						});
						return false;
                        }

                    }

                },

                error: function (ex) {

                }
            });
        }

