           function FindworkshopByCity() {


        var cityId = $('#ddlCityId').val();
        //console.log(CategoryId);
                $("#ddlworkshopId").html("");
        $.ajax({
            url: '@Url.Action("FillWorkshopDropdown")',
            type: "POST",
            dataType: "JSON",
            data: { cityId: cityId },
            success: function (response) {
                console.log(response);
                if (response.workshopList.length>0) {
                    $("#ddlworkshopId").html("");
