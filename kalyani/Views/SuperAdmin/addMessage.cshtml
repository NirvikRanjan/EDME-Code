@model AutoSherpa_project.Models.messageDetails
@{
    ViewBag.Title = "addMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("addMessage", "SuperAdmin", new AjaxOptions { OnSuccess = "onmessageSaved", OnFailure = "onmessageFailed", HttpMethod = "POST" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <b>Add Message</b>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6" >
                            <div class="panel-body">
                                    <label>Message</label>
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.message, new { @class = "form-control", @id = "textareamessage" })
                                    </div>
                                    <div class="pull-right ">
                                        <button type="submit" id="btnsave" class="btn btn-success">Save</button>
                                    </div>
                                </div>
                        </div>
                        <div class="col-md-6"  >
                            <div class="panel-body">
                                <table id="tblmessageDetails" class="table table-striped table-bordered tblIns table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Message</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            getMessage()
        });
        function getMessage() {
            userStatus = $('#ddluserStatus').val();
            $("#tblmessageDetails").DataTable(
                {
                    "destroy": true,
                    "ajax": {
                        "url": siteRoot + "/SuperAdmin/getMessage",
                        "type": "GET",
                        "datatype": "json",
                        "data": {},
                        "error": function (xhr, error, thrown) { console.log(xhr, error, thrown); },
                    },
                    "columns": [
                        { "data": "message", },
                        {
                            "data": "IsActive", render: function (data, type, row) {
                                return `<a href="javascript:void(0);" onclick="EditMessage(${row.id},'${row.message}');" style="color:green">Edit</a>`;
                            }
                        }
                    ],
                    "processing": "true",
                    "serverSide": false,
                    "paging": false,
                    "searching": false,
                    "language": {
                        "processing": "Loading Please Wait.....!"
                    },
                    "info": false,
                    "initComplete": function (data) {
                        var exception = data.json.exception;
                        if (exception != "" && exception != null) {
                            Lobibox.notify('warning', {
                                continueDelayOnInactiveTab: true,
                                msg: exception
                            });
                        }
                    }
                });
        }

        function EditMessage(id, message) {
            $('#textareamessage').val(message);
        }

        function onmessageSaved(data) {
            $('#mainLoader').css({ 'display': 'none' });

            if (data.success == true) {
                Lobibox.notify('success', {
                    continueDelayOnInactiveTab: true,
                    msg: 'Message Saved Successfully.'
                });
                getMessage();
            }
            if (data.success == false) {
                Lobibox.notify('warning', {
                    continueDelayOnInactiveTab: true,
                    msg: data.exception
                });
            }
            $('#textareamessage').val('')
        }

        function onmessageFailed(data) {
            Lobibox.notify('warning', {
                continueDelayOnInactiveTab: true,
                msg: 'Error Occured While SAving Data'
            });
        }

        $('#btnsave').click(function () {
            var message = $("#textareamessage").val();
            if (message == '') {
                Lobibox.notify('warning', {
                    continueDelayOnInactiveTab: true,
                    msg: 'Please Enter Message'
                });
                return false;
            }
            $('#mainLoader').css({ 'display': 'block' });

        })

    </script>

}