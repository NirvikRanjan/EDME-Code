
@{
    ViewBag.Title = "UploadVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .video-frame {
        width: 100%;
        height: 245px;
    }
</style>
>
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Video<button type="button" class="btn btn-danger rounded-0" data-toggle="modal" data-target="#UploadVideo">
    <i class="fa fa-plus-circle"></i> Add New
</button>
            </div>
            <div class="panel-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4 col-md-4 col-xs-12">
                            <div class="title">@item.FileName</div>
                            <div class="video-frame">

                                <video style="width:100%; height:auto;" controls>
                                    <source src="@Url.Content(@item.FilePath)" type="video/mp4" />

                                </video>

                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
<div class="modal fade" id="UploadVideo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Upload New video File</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadVideo", "SuperAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="file" id="videoUpload" name="videoUpload" />

                    <input type="submit" id="btnUpload" class="btn btn-secondary" value="Upload" />

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>